<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_scene"
        android:scaleType="fitXY" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/home_sel"
        android:onClick="home"
        app:layout_constraintBottom_toTopOf="@+id/upLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="114dp"
        android:layout_height="105dp"
        android:src="@drawable/frame_timer"
        app:layout_constraintBottom_toTopOf="@+id/upLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:src="@drawable/timer"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="71dp"
        android:layout_height="24dp"
        android:src="@drawable/score"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/irishgrover_regular"
        android:text="0"
        android:textColor="@color/score_color"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/timer"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/timer" />

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/irishgrover_regular"
        android:textColor="@color/timer_color"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/upLine"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleX="2"
        android:scaleType="centerCrop"
        android:src="@color/color_1"
        android:layout_marginTop="125dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/downLine"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:scaleX="2"
        android:scaleType="centerCrop"
        android:src="@drawable/color_button__1_"
        app:layout_constraintBottom_toBottomOf="parent" />


    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="290dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/downLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upLine">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="93dp">

            <ImageButton
                android:id="@+id/but1"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/color_button__1_"
                android:onClick="gameButton1" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/but2"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/color_button__2_"
                android:onClick="gameButton2" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="93dp">

            <ImageButton
                android:id="@+id/but3"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/color_button__3_"
                android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="20"
                android:onClick="gameButton3" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/but4"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/color_button__4_"
                android:onClick="gameButton4" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="93dp">

            <ImageButton
                android:id="@+id/but5"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/color_button__5_"
                android:onClick="gameButton5" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/but6"
                android:layout_width="90dp"
                android:layout_height="93dp"
                android:background="@drawable/color_button__6_"
                android:onClick="gameButton6" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="290dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/downLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upLine">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="93dp">


            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/but1Box"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/correct"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2.5" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/but2Box"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/correct"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="93dp">


            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/but3Box"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/correct"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2.5" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/but4Box"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/correct"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="93dp">


            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/but5Box"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/correct"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2.5" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/but6Box"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/correct"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>